        <servlet-class>PurchaseRequisition.PR_Type1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>PurchaseRequisition.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemRegistrationController</servlet-name>
        <servlet-class>Inventory.ItemRegistrationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StockOverviewController</servlet-name>
        <servlet-class>Inventory.StockOverviewController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StockRequirementController</servlet-name>
        <servlet-class>Inventory.StockRequirementController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RejectedItemsController</servlet-name>
        <servlet-class>Inventory.RejectedItemsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchaseRequisitionController</servlet-name>
        <servlet-class>PurchaseRequisition.PurchaseRequisitionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PR_Type</servlet-name>
        <url-pattern>/PR_Type</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PR_Type1</servlet-name>
        <url-pattern>/PR_Type1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemRegistrationController</servlet-name>
        <url-pattern>/ItemRegistrationController</url-pattern>
