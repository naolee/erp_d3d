        <servlet-name>StockOverviewController</servlet-name>
        <url-pattern>/StockOverviewController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StockRequirementController</servlet-name>
        <url-pattern>/StockRequirementController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RejectedItemsController</servlet-name>
        <url-pattern>/RejectedItemsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchaseRequisitionController</servlet-name>
        <url-pattern>/PurchaseRequisitionController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
